<!-- header.twig -->
{# {{ dump(header_footer.header) }} #}

<div class="header">
	<div class="relative">
		<div class="site-name">

			<div class="name">
				<a href="/" >{{ header_footer.site_title }}</a>
				<div class="logo">
					<a href="/" ><i class="fas fa-laptop-code"></i></a>
				</div>
			</div>
			<div class="subtext">{{ header_footer.site_subtitle }}</div>
		</div>

		<a id="header-hamburger" class="open-mobile-menu" href="javascript:void(0)">
			<span class="line"></span>
			<span class="line"></span>
			<span class="line"></span>
		</a>

		<ul id="mobile-menu" class="uk-width-1-1 uk-hidden header-items">
		{% for menu_item in header_footer.header %}
			<a href="{{ menu_item.field_link[0].uri }}"><li>{{ menu_item.field_link[0].title }}</li></a>
		{% endfor %}
		</ul>
	</div>
</div>