{# {{ dump(paragraph_item.field_background_image) }} #}
<div uk-parallax="bgy: -300" style="background-image:url('{{ paragraph_item.field_background_image[0]['url'] }}')" class="background-wrapper">
	<div class="carousel-title">{{ paragraph_item.field_title[0]['value']}}</div>
	<div class="border"></div>

	<div class="cards uk-grid">
		{% for experience_card in paragraph_item.field_experience_cards %}
			<div class="card uk-width-1-3@s uk-width-1-6@l">
				<div class="card-wrapper">
					<div class="card-header">
						<div class="icon"><i class="fas fa-{{ experience_card.field_fa_icon[0]['icon_name'] }}"></i></div>
						<div class="title">{{ experience_card.field_tagline[0]['value'] }}</div>
					</div>
					
					<div class="bullets">
						<ul>
							{% for bullet in experience_card.field_bullets %}
								<li>{{ bullet['value'] }}</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
</div>